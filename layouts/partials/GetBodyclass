{{- $bodyclass := .Params.bodyclass | default "" -}}

{{- if ne $bodyclass "" -}}
  {{- $bodyclass = printf "page-%s" $bodyclass -}}
{{- end -}}

{{- if or (or .Params.full_width .Params.diplomas) (and (eq .Kind "section") (eq .Type "posts")) -}}
  {{- $bodyclass = printf "full-width %s" $bodyclass -}}
{{- end -}}

{{- return $bodyclass -}}